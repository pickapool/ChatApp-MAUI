@inherits CameraDialogBase

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Camera" Class="navigation mb-1" />
            CAMERA
        </MudText>
    </TitleContent>
    <DialogContent>
        <CameraComponent OnCapture="(Stream s) => Capture(s)"></CameraComponent>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Capture</MudButton>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancel</MudButton>
    </DialogActions>
</MudDialog>