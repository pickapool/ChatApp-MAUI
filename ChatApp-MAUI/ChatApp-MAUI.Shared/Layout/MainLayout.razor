@inherits  MainLayoutBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<AuthorizeView>
    <Authorizing>
        <LoaderComponent></LoaderComponent>
    </Authorizing>
    <Authorized>
        <MudLayout>
            <MudAppBar Elevation="1">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer"
                ref="reference" />
                <MudSpacer />
                <MudAutocomplete 
                    Class="@($"{(_isDarkMode ? "app-search-dark" : "app-search")}")"
                    Context="user"
                                 Placeholder="Search Users"
                    @bind-Value="user" 
                    SearchFunc="@GetUsers" 
                    OpenIcon="@Icons.Material.Filled.Search" 
                    Variant="Variant.Outlined"
                    DebounceInterval="500"
                    MinCharacters="1"
                    Margin="Margin.Dense"
                    ToStringFunc="(e) => null">
                    <ProgressIndicatorInPopoverTemplate>
                        <MudList T="AuthTokenModel" ReadOnly>
                            <MudListItem>
                                Loading...
                            </MudListItem>
                        </MudList>
					</ProgressIndicatorInPopoverTemplate>
                    <ItemTemplate>
                        <UserComponent User="user"></UserComponent>
                    </ItemTemplate>
                </MudAutocomplete>
                <MudSwitch 
                    @bind-Value="_isDarkMode" 
                    Size="Size.Large"
                    ThumbIcon="@(_isDarkMode ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.WbSunny)"
                    Class=""
                    ThumbIconColor="@(_isDarkMode ? Color.Dark : Color.Default)">
                </MudSwitch>
                <ProfileContainer></ProfileContainer>
            </MudAppBar>
            <MudDrawer @bind-Open="@_open" Breakpoint="Breakpoint.Sm" Elevation="1" Variant="@DrawerVariant.Temporary">
                <MudDrawerHeader>
                    <MudText Typo="Typo.h6">My App</MudText>
                </MudDrawerHeader>
                <MudNavMenu>
                    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Message">Messages</MudNavLink>
                    <MudNavLink Href="/frientrequest" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.PersonAddAlt1">Friend Request</MudNavLink>
                    <MudNavLink Match="NavLinkMatch.All">Community</MudNavLink>
                </MudNavMenu>
            </MudDrawer>
            <MudMainContent Class='@($"pt-16 height100vh {(_isDarkMode ? "" : "bg-alice")}")'>
                @Body
            </MudMainContent>
        </MudLayout>
    </Authorized>
    <NotAuthorized>
        <PreLoaderComponent>
            <ChildComponent>
                @if (isRegistration)
                {
                    <AccountRegistration OnSignIn="()=> isRegistration = !isRegistration"></AccountRegistration>
                }
                else
                {
                    <LoginComponent OnRegistrationClick="()=> isRegistration = !isRegistration"></LoginComponent>
                }
            </ChildComponent>
        </PreLoaderComponent>
    </NotAuthorized>
</AuthorizeView>
<style>
    .app-search-dark .mud-input-control-input-container {
        border-radius: 25px !important;
    }

    .app-search-dark .mud-input-outlined .mud-input-outlined-border {
        border-radius: 25px !important;
    }

    .app-search .mud-input-control-input-container {
        border-radius: 25px !important;
        background-color: white;
    }

    .app-search .mud-input-outlined .mud-input-outlined-border {
        border-color: white !important;
        border-radius: 25px !important;
    }

    
    .app-search .mud-input:after {
        border-bottom: 2px solid white !important;
    }
</style>