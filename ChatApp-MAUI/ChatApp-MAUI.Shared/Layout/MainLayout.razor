@inherits  MainLayoutBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<AuthorizeView>
    <Authorizing>
        <LoaderComponent></LoaderComponent>
    </Authorizing>
    <Authorized>
        <MudLayout>
            <MudAppBar Elevation="1">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer"
                ref="reference" />
                <MudSpacer />
                <MudAutocomplete 
                    Context="user" 
                    Label="Search Users" 
                    @bind-Value="user" 
                    SearchFunc="@GetUsers" 
                    OpenIcon="@Icons.Material.Filled.Search" 
                    Variant="Variant.Outlined"
                    DebounceInterval="500"
                    MinCharacters="1"
                    Margin="Margin.Dense"
                    ToStringFunc="(e) => null">
                    <ProgressIndicatorInPopoverTemplate>
                        <MudList T="AuthTokenModel" ReadOnly>
                            <MudListItem>
                                Loading...
                            </MudListItem>
                        </MudList>
					</ProgressIndicatorInPopoverTemplate>
                    <ItemTemplate>
                        <UserComponent User="user"></UserComponent>
                    </ItemTemplate>
                </MudAutocomplete>
                <MudSwitch 
                    @bind-Value="_isDarkMode" 
                    Size="Size.Large"
                    ThumbIcon="@(_isDarkMode ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.WbSunny)"
                    Class=""
                    ThumbIconColor="@(_isDarkMode ? Color.Dark : Color.Default)">
                </MudSwitch>
                <ProfileContainer></ProfileContainer>
            </MudAppBar>
            <MudDrawer @bind-Open="@_open" Breakpoint="Breakpoint.Sm" Elevation="1" Variant="@DrawerVariant.Temporary">
                <MudDrawerHeader>
                    <MudText Typo="Typo.h6">My App</MudText>
                </MudDrawerHeader>
                <MudNavMenu>
                    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.CameraAlt">Access Camera</MudNavLink>
                    <MudNavLink Match="NavLinkMatch.All">Library</MudNavLink>
                    <MudNavLink Match="NavLinkMatch.All">Community</MudNavLink>
                </MudNavMenu>
            </MudDrawer>
            <MudMainContent Class='@($"pt-16 height100vh {(_isDarkMode ? "" : "bg-alice")}")'>
                @Body
            </MudMainContent>
        </MudLayout>
    </Authorized>
    <NotAuthorized>
        <PreLoaderComponent>
            <ChildComponent>
                @if (isRegistration)
                {
                    <AccountRegistration OnSignIn="()=> isRegistration = !isRegistration"></AccountRegistration>
                }
                else
                {
                    <LoginComponent OnRegistrationClick="()=> isRegistration = !isRegistration"></LoginComponent>
                }
            </ChildComponent>
        </PreLoaderComponent>
    </NotAuthorized>
</AuthorizeView>
<style>
    .mud-input-outlined-border {
        border-color: inherit !important;
    }

    .mud-input-control > .mud-input-control-input-container > .mud-input-label-outlined.mud-input-label-inputcontrol {
        color: inherit !important;
    }

    .mud-input-outlined .mud-input-outlined-border {
        border-color: white !important;
        border-radius: 20px !important;
    }

    .mud-input svg,.progress-indicator-circular {
        color:white !important;
    }

    .mud-input-outlined input:focus {
        outline: none;
        border-color: white !important;
        box-shadow: none !important;
    }

    .mud-input:after {
        border-bottom: 2px solid white !important;
    }

    .mud-input > input.mud-input-root-outlined.mud-input-root-adorned-end, div.mud-input-slot.mud-input-root-outlined.mud-input-root-adorned-end {
        color: white;
    }
</style>